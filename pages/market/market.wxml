<!--pages/market/market.wxml-->
<view class="market_page">
    <image style="width:100%" src="./image/MarketCover.jpg" mode="widthFix"/>
    <view style="width:100%;">
        <view class="form-group" style="z-index: 0; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.05);">
            <view class="form-cell">
                <van-card
                num="2"
                price="100"
                desc="黑色的"
                title="丝袜"
                thumb="https://img.alicdn.com/i2/719851228/O1CN01cf8w8w1KwT06MOpWr_!!719851228.jpg"
                tag="常驻"
                lazy-load
                />
            </view>
        </view>
    </view>
    <movable-area style="pointer-events: none; position: fixed; width: 100%; height: 100%;">
        <movable-view style="pointer-events: auto; width: 20%; height: 20%;top: 80%;left: 100%" x="{{screenWidth}}" y="{{screenHeight}}" direction="all">
            <button class="btn-normal" hover-class="btn-hover" size="mini" bindtap="toAddPage"
            style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                <image style = "margin-top: 10px; height: 100%; width: 100%;" mode="widthFix" src="./image/Plus.png"/>商品
            </button>
        </movable-view>
    </movable-area>
</view>
