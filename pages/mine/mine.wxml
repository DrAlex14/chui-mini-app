<view class="mine_container">
  <view class="userinfo">
    <view wx:if="{{needLogin}}">
      <button type="primary" bindtap="getUserProfile"> 登录 </button>
    </view>
    <view wx:else>
      <view>
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image>
      </view>
      <view>
        <text>{{userInfo.nickName}}</text>
      </view>
    </view>
  </view>
  <view>
    
  </view>
</view>